{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug with Chrome",
            "url": "http://localhost:1081",
            "webRoot": "${workspaceFolder}/packages/ui5-app/webapp",
            "sourceMaps": true,
            "disableNetworkCache": true,
            "showAsyncStacks": true,
            "preLaunchTask": "yarn-debug",
            "postDebugTask": "postdebug-kill"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Middlewares",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "cwd": "${workspaceFolder}/packages/ui5-app",
            "port": 9229
        },
        {
            "name": "wdi5 w current file",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "runtimeVersion": "12.19.0",
            "args": [
                "${workspaceFolder}/packages/ui5-app/wdio.conf.js",
                "--spec",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        }
    ]
}